<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_listecourse"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.chronicle972.siblings.listecourse">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="420dp"

        android:id="@+id/listviewitem"
        android:layout_above="@+id/txtitem" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ajouterbtn"
        android:onClick="ajouterclick"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@android:drawable/ic_input_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elevation="0dp" />

    <TextView
        android:text="Liste Course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtitem"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/ajouterbtn"
        android:layout_toStartOf="@+id/ajouterbtn" />

</RelativeLayout>
